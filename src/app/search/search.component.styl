.main-search{
  max-width: 600px;
  width: 80%;
  height: 375px;
  margin: 0px auto;
}
.search-img-wrapper {
  margin: 0 auto;
  max-width: 400px;
  max-height: 230px;
  position: relative;
  width: 100%;
}
img{
  width: 100%;
  height: auto;
  border-radius: 20px 50px;
}

.search-types {
  float: left;
  padding-left: 5px;
}

.search-type {
  float: left;
  margin-right: 15px;
  font-size: 17px;
  padding: 0 0 2px 2px;
  cursor: pointer;
  height: 18px;
}
ul {
  list-style-type: none;
  margin: 2px;
  padding: 0;
  border-top: none;
}

.search-type.current{
  color: black;
  border-bottom: 2px solid black;
  font-weight: bold;
}
.search-input{
  width: 100%;
  height: 35px;
  margin-top: 15px;
  border: 1px solid #b9b9b9;
}

.search-button-area{
  margin-top 16px;
  text-align: center;
}
.search-button{
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  background-color: #202020;
  border-radius: 2px;
  height: 33px;
  width: 120px;
  border: 1px solid #101010;
  color: #ffffff;
}
